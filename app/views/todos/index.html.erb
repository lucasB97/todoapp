<h1>All Todos</h1>

<p>
    <%= link_to "Create a Todo", new_todo_path%>
</p>

<table>
    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>
    <%@todo.each do |list|%>
        <tr>
            <td><%= list.name%></td>
            <td><%= list.description%></td>
            <td><%= link_to "Edit", edit_todo_path(list)%> |
            <td><%= link_to "Show", todo_path(list)%> |
            <td><%= link_to "Delete", todo_path(list), method: :delete, data: {confirm: "Are you surte?"}%></td>
        </tr>
    <% end %>
</table>
